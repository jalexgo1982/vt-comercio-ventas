journal = {Technological Forecasting and Social Change},
volume = {203},
pages = {123364},
year = {2024},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2024.123364},
url = {https://www.sciencedirect.com/science/article/pii/S0040162524001604},
author = {Xuekun Suo and Longting Zhang and Rong Guo and Han Lin and Mingchuan Yu and Xiuhong Du},
keywords = {Digital economy, Corporate total factor productivity, Knowledge-based view of firm, Industry environment, Munificence, Dynamism, Complexity},
abstract = {This study aims to explore the association between the digital economy (DE) and corporate total factor productivity (TFP), as well as to analyzing the potential moderating influence of industry environment. The sample comprises Chinese A-share listed manufacturing enterprises, and the analysis utilizes the knowledge-based view of firms. The results reveal an inverted U-shaped association between the digital economy and corporate total factor productivity, with the industry environment playing a moderating role in this association. Specifically, the inverted U-shaped association is flatter in industries with higher levels of munificence and dynamism, while it is steeper in the higher complexity industries. These findings underscore the impact of the digital economy on firm productivity and provide guidance on how to effectively utilize the digital economy to improve productivity and competitiveness under different industry environments.}
}

@article{RONG2023122776,
title = {Toward born sharing: The sharing economy evolution enabled by the digital ecosystems},
journal = {Technological Forecasting and Social Change},
volume = {196},
pages = {122776},
year = {2023},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2023.122776},
url = {https://www.sciencedirect.com/science/article/pii/S0040162523004614},
author = {Ke Rong and Yining Luo},
keywords = {Sharing economy, Access economy, Digital ecosystem, Born sharing},
abstract = {Recent years have seen the prosperity of the sharing economy and the emergence of new sharing models. Our study aims to examine how the sharing economy evolves with digitalization and how digital ecosystems enable the emergence and evolution of the sharing economy. By conducting an inductive case study of the sharing economy in China from 2014 to 2022, we identify that the sharing economy is expanding from adapted sharing via digital sharing platforms to born sharing via product-service systems, and from downstream consumption field to upstream production field. This evolution is enabled by digital ecosystems composed of the digital infrastructure pool and the digital enablement pool. Digital technologies and infrastructure reduce transaction and access costs, and enable new organizing models of the sharing economy through digital enablement mechanisms of integration and value appropriation, renewal and moderation, and updating and upgrading. By exploring the evolution of the sharing economy, we contribute to sharing economy literature by identifying the born sharing model and highlighting the on-demand access economy supported by digital technologies as the locus of the sharing economy. We also provide a dynamic framework of digital ecosystems for future research to advance the understanding of the digital economy.}
}

