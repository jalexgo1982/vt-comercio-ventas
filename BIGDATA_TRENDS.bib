author = {Schena Rosamartina and Secundo Giustina and De Fano Domenico and Del Vecchio Pasquale and Russo Angeloantonio},
keywords = {Sustainable Development Goals, SDGs, Firm performance, Digital reputation, Non-financial performance},
abstract = {This study analyzes the link between a firm's digital reputation and performance and the conditions under which its orientation towards sustainable development can moderate this link. The manuscript deals with relevant topics such as the digital tools that support the implementation of the firm's sustainability strategy, concerning the firm's commitment to deploying Sustainable Development Goals (SDGs). Using a sample of firms from the Fortune 500 list from 2015 to 2019, the findings show that digital reputation positively impacts a firm's financial and non-financial performance. Furthermore, results reveal that breadth (the variety of SDG-related themes covered) and concentration (the distribution of non-financial disclosure among the SDGs) operate as moderators in the above relationship. On the other hand, depth (the total volume of the SDG-based information) appears not to be significant. Finally, this study enriches the debate by providing a new data operationalization process to measure the firm's commitment to the SDGs of the 2030 Agenda.}
}

@article{PENG2023122338,
title = {Promoting value emergence through digital platform ecosystems: Perspectives on resource integration in China},
journal = {Technological Forecasting and Social Change},
volume = {189},
pages = {122338},
year = {2023},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2023.122338},
url = {https://www.sciencedirect.com/science/article/pii/S0040162523000239},
author = {Hui Peng and Yaobin Lu and Sumeet Gupta},
keywords = {User whole-process engagement, Value emergence, Resource integration, Digital platform ecosystem},
abstract = {Although value co-creation of user-enterprise platforms has been investigated in recent decades, only a few empirical efforts have been made to explore the value emergence of digital platform ecosystems from the perspectives of the enterprise, supplier, government, and user interactions, specifically concerning the complexity and emergence of interactions arising out the integration of micro-, meso-, and macro-level resources in China. To address this research gap, this study examines the relationship between user whole-process engagement, value emergence, resource integration, and firm performance from the perspective of resource integration combined with complex systems theory. A questionnaire survey of 377 digital enterprises in different industries in China was conducted; subsequently, the theoretical model was tested by using empirical and experimental methods. The empirical results showed that the emergence of efficiency and integrated value played a mediating role in the relationship between user whole-process engagement and firm performance. Resource integration positively moderated the relationship between user whole-process engagement and value emergence. Simultaneously, value emergence promoted the improvement of multidimensional performance of enterprise platforms, and its impact on a firm's social performance was greater as compared to that on the firm's economic performance. Thus, the research has interesting implications for theory, enterprises, and government.}
}

