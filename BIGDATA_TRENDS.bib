author = {Ali Ra’Ed Alshawawreh and Francisco Liébana-Cabanillas and Francisco Javier Blanco-Encomienda},
keywords = {Big data analytics, e-WOM, e-CRM, Social media, Market performance, Competitive advantage},
abstract = {The aim of this study is to explore the potential uses of Big Data for enhancing the competitive position of telecommunication companies based on Resource-Based View Theory. To achieve it, a quantitative approach was employed to collect and analyze primary data from 304 telecommunications companies, which was then utilized to test hypotheses related to the targeted phenomena. A structural equation model was proposed to analyze the effects of Big Data Analytics (BDA) on achieving a competitive advantage. The results indicated that BDA improves electronic word of mouth (e-WOM) and electronic customer relationship management (e-CRM). Furthermore, it was found that BDA improves social media platforms. In addition, e-WOM, e-CRM, and social media were found to improve market performance, ultimately boosting competitive advantage. This research underscores the significance of analyzing BDA to achieve a competitive advantage among competing telecommunication firms.}
}

@article{RAMMER2023122874,
title = {Using big data for generating firm-level innovation indicators - a literature review},
journal = {Technological Forecasting and Social Change},
volume = {197},
pages = {122874},
year = {2023},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2023.122874},
url = {https://www.sciencedirect.com/science/article/pii/S0040162523005590},
author = {Christian Rammer and Nordine Es-Sadki},
keywords = {Big data, Innovation indicators, CIS},
abstract = {Obtaining indicators on the innovation activities of firms has been a challenge in economic research for a long time. The most frequently used indicators - R&D expenditures and patents - provide an incomplete picture as they represent inputs in the innovation process. Output measurement of innovation has strongly relied on survey data such as the Community Innovation Survey (CIS). However, this type of data suffers from several shortcomings typical of surveys, including incomplete coverage of the business sector, subjectivity concerns, low timeliness, and limited comparability across industries and firms. An alternative that has attracted growing interest is to use big data sources to collect innovation data at the firm level. This paper discusses recent attempts to use digital big data sources including websites and social media to generate firm-level innovation indicators. It summarises the main challenges of using big data and proposes practical guidelines for their use, including a research agenda that should be useful to practitioners as well as users of statistics derived from big data.}
}

@article{MARIANI2023122296,
title = {Do submission devices influence online review ratings differently across different types of platforms? A big data analysis},
journal = {Technological Forecasting and Social Change},
