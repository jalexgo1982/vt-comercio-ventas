year = {2022},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2021.121213},
url = {https://www.sciencedirect.com/science/article/pii/S0040162521006466},
author = {Alejandro {Garza Ramos} and Tugrul Daim and Lukas Gaats and Dietmar W. Hutmacher and David Hackenberger},
keywords = {Technology roadmapping, 3D printing, Biomedical industry, Startup company, Biomanufacturing, Cell culture},
abstract = {This paper is a first attempt to establish how technology roadmapping, commonly reserved for established organizations, can be adapted for the characteristics and limitations of a startup company. This work was performed in collaboration with a newly founded company to create a technology roadmap for devising a 3D cell culture solution for the fields drug discovery and in vitro disease models. Currently, published literature focuses mainly on the methodology and the application in mature companies and industries and overlooking novel technological multinationals. This paper on the other hand, provides a case of implementing a technology roadmap for a start up technology building product based on an emerging technology in an emerging industry. The paper outlines how it was adopted and implemented successfully in a startup company. The roadmapping process was intended to create a strategic plan that can illustrate to the investors how the acquired resources will be used to develop the product. Additionally, it aimed to assist the company in disclosing diverse gaps and prioritizing efforts and resources to face uncertainty while developing the product and the company. The widespread use of advanced manufacturing has reached the drug discovery and research domain. There is an emerging market with no dominant design; currently, no solution addresses the requirements of the research and industry segments.}
}

@article{PEREZCASTRO2021101452,
title = {The digital divide and its impact on the development of Mediterranean countries},
journal = {Technology in Society},
volume = {64},
pages = {101452},
year = {2021},
issn = {0160-791X},
doi = {https://doi.org/10.1016/j.techsoc.2020.101452},
url = {https://www.sciencedirect.com/science/article/pii/S0160791X20312550},
author = {Miguel Ángel Pérez-Castro and Miriem Mohamed-Maslouhi and Miguel Ángel Montero-Alonso},
keywords = {HDI, IDI, ICT, Development, Mediterranean countries, Globalization},
abstract = {The dramatic increase in communications, trade interaction and interdependence has made it necessary to implement new metrics to compare the development rate of nations and their economies. There is much research that analyses the impact of information and communication technology on human development. These studies have analyzed and compared human development indicators (HDI) and information and communication technology (ICT) development index (IDI) from various geographical areas or on a randomized basis. There is much research that analyses the impact of IDI on HDI. This study wants to analyze the economic and digital divide between the countries that make up a region whose economic and cultural relation have a long historical tradition. For this purpose, we chose the countries bordering the Mediterranean Sea, since, in addition to these traditional relations, there are recent Euro-Mediterranean association agreements between the European Union and the countries of North Africa and the Middle East, whose objective, among others, is scientific, technical and technological collaboration. The potential relationship between the HDI and the HDI is to be known and whether it can improve the way different countries assess their level of development. The descriptive analysis of the HDI and IDI behavior shows us that human and technological development was progressing with average growth rates of 23% and 2.5%, respectively. Differences between countries also narrowed further in HDI, with a decrease of 7.4%, compared with a 5.2% decrease in IDI. When the conversion was done to the same scale, there was an average difference of 0.2 points between the two index values. Consequently, the Mediterranean countries studied were closer to achieving a rapprochement in human development than in technological development. This study can be used as a tool by policymakers, especially in developing countries, to reinforce their intentions to support the use and implementation of ICT.}
}

@article{WEN2022108290,
title = {Pricing strategy and collection rate for a supply chain considering environmental responsibility behaviors and rationality degree},
journal = {Computers & Industrial Engineering},
volume = {169},
pages = {108290},
year = {2022},
issn = {0360-8352},
doi = {https://doi.org/10.1016/j.cie.2022.108290},
url = {https://www.sciencedirect.com/science/article/pii/S0360835222003540},
author = {Danping Wen and Tiaojun Xiao and Mehdi Dastani},
keywords = {Supply chain management, Pricing strategy, Environmental responsibility behavior, Bounded rationality, Game theory},
abstract = {Owing to the coexistence of environmental pollution and green behaviors, optimizing pricing strategy and collection rate is a growing concern. We develop game-theoretical models to investigate these issues in a supply chain considering environmental responsibility behaviors under two scenarios, perfect rationality and bounded rationality. Equal-pricing and differentiated-pricing strategies are given special attention. Under perfect rationality, we find that: (i) for a high unit environmental cost of uncollected used products, to optimize collection rate, the manufacturer makes a trade-off between total environmental cost reduction and the investment in collecting used products, rather than consumers’ demand; (ii) the retailer’s profitability for remanufactured products depends on green consumers partly or fully accepting remanufactured products, especially under equal-pricing; and (iii) when green consumers partly accept remanufactured products, for a medium green consumers’ acceptance degree and a low ordinary consumers’ acceptance degree, differentiated-pricing benefits the manufacturer but hurts the retailer. When there are enough green consumers, the retailer’s interests are aligned with the manufacturer and the supply chain under differentiated-pricing. Under bounded rationality, we find that: (i) compared with perfect rationality, the manufacturer and the retailer decrease the prices for new products and collection rate, and increase the price for remanufactured products, especially under differentiated-pricing; (ii) for a low bounded rationality level, the manufacturer and supply chain are better off by using differentiated-pricing; and (iii) consumers’ multi-dimensional heterogeneities and purchasing uncertainty play important roles in choosing an optimal pricing strategy.}
}

