issn = {0360-8352},
doi = {https://doi.org/10.1016/j.cie.2024.109991},
url = {https://www.sciencedirect.com/science/article/pii/S0360835224001128},
author = {Chong Zhang and Yi Zhu and Xuejie Ren},
keywords = {Supply chain management, Online retail platform, Blockchain adoption, Information sharing, Quality disclosure},
abstract = {In reality, numerous manufacturers adopt blockchain technology to eliminate consumers distrust in product quality which can expand the market demand. Advanced information technology and vast amounts of consumer data have empowered online retail platforms to share demand information with manufacturers, which can motivate manufacturers to improve product quality. However, the double marginalization effect is potentially exacerbated. Considering quality distrust, this paper develops a multi-stage game-theoretical model to study the interplay between blockchain adoption and information sharing strategy. The analysis not only investigates the dependence of the interplay on the quality cost coefficient and the unit cost of blockchain adoption, but also endeavors to determine the equilibrium strategy combination of blockchain adoption and information sharing. The findings indicate that blockchain adoption can alleviate the double marginalization effect and improve product quality conditionally. Additionally, irrespective of the level of consumers trust, the manufacturer exhibits a propensity to embrace blockchain technology. This adoption of blockchain has the potential to incentivize the online platform to share demand information under certain conditions. Several extended modelling analyses are conducted to check the robustness of the main model and additional insights are obtained.}
}

@article{KUHN2020244,
