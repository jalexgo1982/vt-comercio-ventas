year = {2020},
issn = {0019-8501},
doi = {https://doi.org/10.1016/j.indmarman.2019.10.016},
url = {https://www.sciencedirect.com/science/article/pii/S0019850119309551},
author = {Sara Quach and Park Thaichon and Ju-Yeon Lee and Scott Weaven and Robert W. Palmatier},
