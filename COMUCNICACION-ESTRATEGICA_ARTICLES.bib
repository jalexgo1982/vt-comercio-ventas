keywords = {Allegiant communication behavior, Employee voice, Employee silence, Employee listening, Transformational leadership, Organizational cultures, Organizational effectiveness},
abstract = {The purpose of this study is to conceptualize allegiant communication behavior (ACB), which is employees’ loyal and faithful communicative actions for their organizations. Using the analogy of a choir, we identify three types of allegiant communicative behaviors that employees may use to create a harmonious sound requiring efforts of voicing and devoicing: allegiant amity, allegiant reticence, and allegiant voice. Furthermore, this study aims to examine the model’s strategic value by testing its relationship with transformational leadership and four organizational cultures. The results of analysis of the data from two national surveys conducted in South Korea (N = 314) and the United States (N = 314) indicate that the ACB model is reliable and valid. The results also show that transformational leadership is a significant factor that increases ACB and suggest how different organizational cultures enhance ACB across two different countries.}
}

@article{SIEBELINK2021501,
title = {Roadmapping: (Missed) opportunities to overcome strategic challenges},
journal = {Business Horizons},
