year = {2023},
issn = {0969-6989},
doi = {https://doi.org/10.1016/j.jretconser.2023.103335},
url = {https://www.sciencedirect.com/science/article/pii/S0969698923000826},
author = {Angeline Gautami Fernando and Eugene Cheng-Xi Aw},
